{% extends 'admin/base.html.twig' %}
{% block title %}Edit Template: {{ template.nameLabel }}{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a href="{{ path('admin_notification_template_index') }}" class="text-slate-500 text-decoration-none">
            <i class="bi bi-arrow-left"></i> Back to Templates
        </a>
        <h1 class="mt-2">
            <span class="badge bg-{{ template.channel == 'slack' ? 'purple' : 'blue' }}-100 text-{{ template.channel == 'slack' ? 'purple' : 'blue' }}-700 me-2">
                <i class="bi bi-{{ template.channel == 'slack' ? 'slack' : 'envelope' }}"></i>
                {{ template.channel|capitalize }}
            </span>
            {{ template.nameLabel }}
        </h1>
    </div>
    <span class="badge bg-{{ template.isActive ? 'success' : 'secondary' }}">
        {{ template.isActive ? 'Active' : 'Inactive' }}
    </span>
</div>

<div
    data-vue-island="notification-template-form"
    data-api-url="{{ path('api_notification_template_variables')|replace({'/variables': ''}) }}"
    data-template-id="{{ template.id }}"
    data-channel="{{ template.channel }}"
    data-cancel-url="{{ path('admin_notification_template_index') }}"
></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('notification-template-form-app') }}
{% endblock %}
