{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
{# Welcome Header #}
<div class="mb-8">
    <h1 class="text-2xl font-bold text-slate-900">ATR - Automation Test Runner</h1>
    <p class="text-slate-500 mt-1">Welcome back, {{ user.username }} &middot; {{ "now"|date("l, F j, Y") }}</p>
</div>

{# Stats Cards #}
<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-xl border border-slate-200 p-4 shadow-sm">
        <div class="flex items-center gap-3">
            <div class="h-10 w-10 shrink-0 rounded-lg bg-blue-50 flex items-center justify-center">
                <i class="bi bi-play-circle text-lg text-blue-600"></i>
            </div>
            <div class="min-w-0">
                <div class="text-xl font-bold text-slate-900">{{ stats.totalRuns ?? 0 }}</div>
                <div class="text-xs text-slate-500 truncate">Total Runs</div>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 p-4 shadow-sm">
        <div class="flex items-center gap-3">
            <div class="h-10 w-10 shrink-0 rounded-lg bg-emerald-50 flex items-center justify-center">
                <i class="bi bi-check-circle text-lg text-emerald-600"></i>
            </div>
            <div class="min-w-0">
                <div class="text-xl font-bold text-slate-900">{{ stats.passedRuns ?? 0 }}</div>
                <div class="text-xs text-slate-500 truncate">Passed</div>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 p-4 shadow-sm">
        <div class="flex items-center gap-3">
            <div class="h-10 w-10 shrink-0 rounded-lg bg-red-50 flex items-center justify-center">
                <i class="bi bi-x-circle text-lg text-red-600"></i>
            </div>
            <div class="min-w-0">
                <div class="text-xl font-bold text-slate-900">{{ stats.failedRuns ?? 0 }}</div>
                <div class="text-xs text-slate-500 truncate">Failed</div>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl border border-slate-200 p-4 shadow-sm">
        <div class="flex items-center gap-3">
            <div class="h-10 w-10 shrink-0 rounded-lg bg-amber-50 flex items-center justify-center">
                <i class="bi bi-server text-lg text-amber-600"></i>
            </div>
            <div class="min-w-0">
                <div class="text-xl font-bold text-slate-900">{{ stats.environments ?? 0 }}</div>
                <div class="text-xs text-slate-500 truncate">Environments</div>
            </div>
        </div>
    </div>
</div>

{# Main Grid #}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Quick Actions #}
    <div class="lg:col-span-2 bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 xl:grid-cols-6 gap-3">
            <a href="{{ path('admin_test_run_new') }}" class="flex flex-col items-center gap-2 p-3 rounded-lg border border-slate-200 hover:border-blue-300 hover:bg-blue-50 transition-colors no-underline group">
                <div class="h-10 w-10 rounded-lg bg-blue-100 flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                    <i class="bi bi-play-fill text-blue-600"></i>
                </div>
                <span class="text-xs font-medium text-slate-700 text-center leading-tight">New Test Run</span>
            </a>

            <a href="{{ path('admin_test_environment_new') }}" class="flex flex-col items-center gap-2 p-3 rounded-lg border border-slate-200 hover:border-violet-300 hover:bg-violet-50 transition-colors no-underline group">
                <div class="h-10 w-10 rounded-lg bg-violet-100 flex items-center justify-center group-hover:bg-violet-200 transition-colors">
                    <i class="bi bi-server text-violet-600"></i>
                </div>
                <span class="text-xs font-medium text-slate-700 text-center leading-tight">Add Environment</span>
            </a>

            <a href="{{ path('admin_test_suite_new') }}" class="flex flex-col items-center gap-2 p-3 rounded-lg border border-slate-200 hover:border-emerald-300 hover:bg-emerald-50 transition-colors no-underline group">
                <div class="h-10 w-10 rounded-lg bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
                    <i class="bi bi-collection text-emerald-600"></i>
                </div>
                <span class="text-xs font-medium text-slate-700 text-center leading-tight">New Test Suite</span>
            </a>

            <a href="{{ path('admin_test_run_index') }}" class="flex flex-col items-center gap-2 p-3 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-50 transition-colors no-underline group">
                <div class="h-10 w-10 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                    <i class="bi bi-list-ul text-slate-600"></i>
                </div>
                <span class="text-xs font-medium text-slate-700 text-center leading-tight">View All Runs</span>
            </a>

            <a href="{{ path('admin_test_history') }}" class="flex flex-col items-center gap-2 p-3 rounded-lg border border-slate-200 hover:border-cyan-300 hover:bg-cyan-50 transition-colors no-underline group">
                <div class="h-10 w-10 rounded-lg bg-cyan-100 flex items-center justify-center group-hover:bg-cyan-200 transition-colors">
                    <i class="bi bi-clock-history text-cyan-600"></i>
                </div>
                <span class="text-xs font-medium text-slate-700 text-center leading-tight">Test History</span>
            </a>

            <a href="http://matre.local:5050/allure-docker-service/projects/default/reports/latest/index.html" target="_blank" rel="noopener" class="flex flex-col items-center gap-2 p-3 rounded-lg border border-slate-200 hover:border-orange-300 hover:bg-orange-50 transition-colors no-underline group">
                <div class="h-10 w-10 rounded-lg bg-orange-100 flex items-center justify-center group-hover:bg-orange-200 transition-colors">
                    <i class="bi bi-file-earmark-bar-graph text-orange-600"></i>
                </div>
                <span class="text-xs font-medium text-slate-700 text-center leading-tight">Allure Results</span>
            </a>
        </div>
    </div>

    {# System Info #}
    <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">System Info</h2>
        <div class="space-y-3">
            <div class="flex items-center gap-3 py-2 border-b border-slate-100">
                <div class="h-8 w-8 shrink-0 rounded bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-600">SF</div>
                <div class="min-w-0 flex-1">
                    <div class="text-xs text-slate-500">Symfony</div>
                    <div class="text-sm font-medium text-slate-900 truncate">{{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</div>
                </div>
            </div>
            <div class="flex items-center gap-3 py-2 border-b border-slate-100">
                <div class="h-8 w-8 shrink-0 rounded bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-600">PHP</div>
                <div class="min-w-0 flex-1">
                    <div class="text-xs text-slate-500">PHP Version</div>
                    <div class="text-sm font-medium text-slate-900 truncate">{{ constant('PHP_VERSION') }}</div>
                </div>
            </div>
            <div class="flex items-center gap-3 py-2">
                <div class="h-8 w-8 shrink-0 rounded bg-slate-100 flex items-center justify-center text-xs font-bold text-slate-600">ENV</div>
                <div class="min-w-0 flex-1">
                    <div class="text-xs text-slate-500">Environment</div>
                    <div class="text-sm font-medium truncate {{ app.debug ? 'text-amber-600' : 'text-emerald-600' }}">
                        {{ app.environment|capitalize }}{{ app.debug ? ' (Debug)' : '' }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('admin_vue') }}
{% endblock %}
