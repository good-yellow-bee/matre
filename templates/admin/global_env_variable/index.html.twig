{% extends 'admin/base.html.twig' %}
{% block title %}Global Environment Variables{% endblock %}
{% block body %}
<div class="mb-4">
    <h1>Global Environment Variables</h1>
    <p class="text-muted">
        Shared variables across all test environments. Environment-specific variables can override these values.
    </p>
</div>

<div
    data-vue-island="env-variable-grid"
    data-api-url="{{ path('api_env_variables_list') | replace({'/list': ''}) }}"
    data-csrf-token="{{ csrf_token('env_variable_api') }}"
></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('env-variable-grid-app') }}
{% endblock %}
