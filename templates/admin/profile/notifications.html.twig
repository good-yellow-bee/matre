{% extends 'admin/base.html.twig' %}

{% block title %}Notification Settings{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center gap-4">
        <div class="h-12 w-12 rounded-xl bg-slate-100 flex items-center justify-center">
            <i class="bi bi-bell text-xl text-slate-600"></i>
        </div>
        <div>
            <h1 class="text-xl font-semibold text-slate-900">Notification Settings</h1>
            <p class="text-sm text-slate-500 mt-0.5">Configure when and how you receive test run notifications</p>
        </div>
    </div>
</div>

<div data-vue-island="profile-notifications"
     data-api-url="{{ path('api_profile_notifications_get') }}"
     data-environments-url="{{ path('api_profile_environments') }}"
     data-cancel-url="{{ path('admin_dashboard') }}"
     data-user-email="{{ app.user.email }}">
</div>

<div class="mt-4 p-4 bg-blue-50 border border-blue-200 rounded-lg">
    <h4 class="text-sm font-medium text-blue-900 mb-2"><i class="bi bi-info-circle me-2"></i>How notifications work</h4>
    <ul class="text-sm text-blue-700 space-y-1">
        <li><strong>Email:</strong> You receive individual emails when test runs complete for your selected environments.</li>
        <li><strong>Failures only:</strong> Only notified when tests fail or the run itself fails.</li>
        <li><strong>All runs:</strong> Notified for all completed test runs regardless of status.</li>
    </ul>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ vite_entry_link_tags('profile-notifications-app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('profile-notifications-app') }}
{% endblock %}
