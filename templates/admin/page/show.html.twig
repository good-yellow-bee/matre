{% extends 'admin/base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-xl font-semibold text-slate-900">{{ page.title }}</h1>
            <p class="text-sm text-slate-500 mt-1">
                Created {{ page.createdAt|date('M j, Y') }} by {{ page.author.username }}
            </p>
        </div>
        <div class="flex gap-2">
            <a href="{{ path('admin_page_edit', {id: page.id}) }}"
               class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500 text-white text-sm font-medium rounded-lg hover:bg-amber-600 transition-colors no-underline">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="{{ path('admin_page_index') }}"
               class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

{# Main Content Grid #}
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Left Column - Page Details #}
    <div class="lg:col-span-2 space-y-6">
        {# Status & Meta #}
        <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
            <h2 class="text-sm font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-info-circle text-blue-600"></i>
                Page Information
            </h2>
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">URL Slug</div>
                    <div class="text-sm text-slate-900 font-mono bg-slate-50 px-3 py-2 rounded-lg border border-slate-100">{{ page.slug }}</div>
                </div>
                <div>
                    <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Status</div>
                    <div class="flex items-center gap-2">
                        {% if page.isPublished %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-emerald-50 text-emerald-700 text-xs font-medium rounded-full">
                                <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full"></span>
                                Published
                            </span>
                        {% else %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-slate-100 text-slate-600 text-xs font-medium rounded-full">
                                <span class="w-1.5 h-1.5 bg-slate-400 rounded-full"></span>
                                Draft
                            </span>
                        {% endif %}
                        {% if page.isHomepage %}
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">
                                <i class="bi bi-house-door"></i>
                                Homepage
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div>
                    <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Author</div>
                    <div class="flex items-center gap-2">
                        <div class="w-6 h-6 rounded-full bg-blue-100 flex items-center justify-center text-xs font-medium text-blue-700">
                            {{ page.author.username|slice(0,1)|upper }}
                        </div>
                        <span class="text-sm text-slate-900">{{ page.author.username }}</span>
                    </div>
                </div>
                <div>
                    <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Views</div>
                    <div class="text-sm text-slate-900 flex items-center gap-1.5">
                        <i class="bi bi-eye text-slate-400"></i>
                        {{ page.viewCount }}
                    </div>
                </div>
            </div>
        </div>

        {# Content #}
        <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
            <h2 class="text-sm font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-file-text text-blue-600"></i>
                Content
            </h2>
            <div class="prose prose-sm max-w-none text-slate-700 bg-slate-50 p-4 rounded-lg border border-slate-100">
                {{ page.content|raw }}
            </div>
        </div>
    </div>

    {# Right Column - Sidebar #}
    <div class="space-y-6">
        {# Categories #}
        <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
            <h2 class="text-sm font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-tags text-violet-600"></i>
                Categories
            </h2>
            {% if page.categories|length > 0 %}
                <div class="flex flex-wrap gap-2">
                    {% for category in page.categories %}
                        <span class="inline-flex items-center px-3 py-1.5 bg-violet-50 text-violet-700 text-xs font-medium rounded-lg">
                            {{ category.name }}
                        </span>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-sm text-slate-500 italic">No categories assigned</p>
            {% endif %}
        </div>

        {# SEO Meta #}
        {% if page.metaDescription or page.metaKeywords %}
        <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
            <h2 class="text-sm font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-search text-emerald-600"></i>
                SEO Settings
            </h2>
            {% if page.metaDescription %}
            <div class="mb-4">
                <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Meta Description</div>
                <p class="text-sm text-slate-700">{{ page.metaDescription }}</p>
            </div>
            {% endif %}
            {% if page.metaKeywords %}
            <div>
                <div class="text-xs font-medium text-slate-500 uppercase tracking-wide mb-1">Meta Keywords</div>
                <p class="text-sm text-slate-700">{{ page.metaKeywords }}</p>
            </div>
            {% endif %}
        </div>
        {% endif %}

        {# Timestamps #}
        <div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm">
            <h2 class="text-sm font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <i class="bi bi-clock-history text-amber-600"></i>
                Activity
            </h2>
            <div class="space-y-3">
                <div class="flex items-center justify-between text-sm">
                    <span class="text-slate-500">Created</span>
                    <span class="text-slate-900">{{ page.createdAt|date('M j, Y H:i') }}</span>
                </div>
                {% if page.updatedAt %}
                <div class="flex items-center justify-between text-sm">
                    <span class="text-slate-500">Last Updated</span>
                    <span class="text-slate-900">{{ page.updatedAt|date('M j, Y H:i') }}</span>
                </div>
                {% endif %}
                {% if page.publishedAt %}
                <div class="flex items-center justify-between text-sm">
                    <span class="text-slate-500">Published</span>
                    <span class="text-slate-900">{{ page.publishedAt|date('M j, Y H:i') }}</span>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
