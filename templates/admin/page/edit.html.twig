{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Edit Page{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>Edit Page</h1>
    <p class="subtitle">Modify the content and settings for: <strong>{{ page.title }}</strong></p>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Basic Information</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.title) }}</div>
                    <div>{{ form_row(form.slug) }}</div>
                </div>

                {{ form_row(form.content) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">SEO Settings</h3>

                {{ form_row(form.metaDescription) }}
                {{ form_row(form.metaKeywords) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Publishing Options</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.author) }}</div>
                    <div>{{ form_row(form.publishedAt) }}</div>
                </div>

                <div class="form-grid">
                    <div>
                        <div class="form-check mb-3">
                            {{ form_widget(form.isPublished) }}
                            {{ form_label(form.isPublished) }}
                            {{ form_help(form.isPublished) }}
                        </div>
                    </div>
                    <div>
                        <div class="form-check mb-3">
                            {{ form_widget(form.isHomepage) }}
                            {{ form_label(form.isHomepage) }}
                            {{ form_help(form.isHomepage) }}
                        </div>
                    </div>
                </div>

                <div class="form-grid">
                    <div>{{ form_row(form.displayOrder) }}</div>
                    <div>{{ form_row(form.categories) }}</div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Page
                </button>
                <a href="{{ path('admin_page_show', {'id': page.id}) }}" class="btn btn-info">
                    <i class="bi bi-eye"></i> View
                </a>
                <a href="{{ path('admin_page_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        Created: {{ page.createdAt|date('Y-m-d H:i') }} |
        Last Updated: {{ page.updatedAt|date('Y-m-d H:i') }} |
        Views: {{ page.viewCount }}
    </small>
</div>
{% endblock %}
