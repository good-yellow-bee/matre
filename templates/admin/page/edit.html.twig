{% extends 'admin/base.html.twig' %}

{% block title %}Edit Page{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <i class="bi bi-file-earmark-text text-xl text-blue-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Edit Page</h1>
                <p class="text-sm text-slate-500 mt-0.5">
                    Modify the content and settings for: <span class="font-medium text-slate-700">{{ page.title }}</span>
                </p>
            </div>
        </div>
        <a href="{{ path('admin_page_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

{# Vue Page Form #}
<div
    data-vue-island="page-form"
    data-page-id="{{ page.id }}"
    data-api-url="{{ path('api_pages_index') }}"
    data-cancel-url="{{ path('admin_page_index') }}"
    data-categories-data="{{ categoriesData|e('html_attr') }}"
></div>

<div class="mt-4 text-sm text-slate-500">
    Created: {{ page.createdAt|date('M j, Y H:i') }}
    {% if page.updatedAt %}
        | Last Updated: {{ page.updatedAt|date('M j, Y H:i') }}
    {% endif %}
    | Views: {{ page.viewCount }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('page-form-app') }}
{% endblock %}
