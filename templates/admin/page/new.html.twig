{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Create Page{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>Create New Page</h1>
    <p class="subtitle">Add a new page to your content management system</p>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Basic Information</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.title) }}</div>
                    <div>{{ form_row(form.slug) }}</div>
                </div>

                {{ form_row(form.content) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">SEO Settings</h3>

                {{ form_row(form.metaDescription) }}
                {{ form_row(form.metaKeywords) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Publishing Options</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.author) }}</div>
                    <div>{{ form_row(form.publishedAt) }}</div>
                </div>

                <div class="form-grid">
                    <div>
                        <div class="form-check mb-3">
                            {{ form_widget(form.isPublished) }}
                            {{ form_label(form.isPublished) }}
                            {{ form_help(form.isPublished) }}
                        </div>
                    </div>
                    <div>
                        <div class="form-check mb-3">
                            {{ form_widget(form.isHomepage) }}
                            {{ form_label(form.isHomepage) }}
                            {{ form_help(form.isHomepage) }}
                        </div>
                    </div>
                </div>

                <div class="form-grid">
                    <div>{{ form_row(form.displayOrder) }}</div>
                    <div>{{ form_row(form.categories) }}</div>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Page
                </button>
                <a href="{{ path('admin_page_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
{% endblock %}
