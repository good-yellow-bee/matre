{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Add Test Environment{% endblock %}

{% block body %}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-emerald-100 flex items-center justify-center">
                <i class="bi bi-globe text-xl text-emerald-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Add Test Environment</h1>
                <p class="text-sm text-slate-500 mt-0.5">Configure a new target environment for tests</p>
            </div>
        </div>
        <a href="{{ path('admin_test_environment_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Environment Details</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.name) }}</div>
                    <div>{{ form_row(form.code) }}</div>
                    <div>{{ form_row(form.region) }}</div>
                </div>

                {{ form_row(form.baseUrl) }}
                {{ form_row(form.backendName) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Admin Credentials</h3>
                <p class="text-muted">Optional: Used for admin panel tests</p>

                <div class="form-grid">
                    <div>{{ form_row(form.adminUsername) }}</div>
                    <div>{{ form_row(form.adminPassword) }}</div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Additional Info</h3>

                {{ form_row(form.description) }}

                <div class="form-check mb-3">
                    {{ form_widget(form.isActive) }}
                    {{ form_label(form.isActive) }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Environment
                </button>
                <a href="{{ path('admin_test_environment_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
