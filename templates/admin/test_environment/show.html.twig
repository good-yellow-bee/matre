{% extends 'admin/base.html.twig' %}

{% block title %}Environment: {{ environment.name }}{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>{{ environment.name }}</h1>
    <p class="subtitle">{{ environment.description|default('Test environment configuration') }}</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Environment Configuration</h5>
                <span class="badge bg-{{ environment.isActive ? 'success' : 'secondary' }}">
                    {{ environment.isActive ? 'Active' : 'Inactive' }}
                </span>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr>
                        <th style="width: 150px">Code</th>
                        <td><code>{{ environment.code }}</code></td>
                    </tr>
                    <tr>
                        <th>Region</th>
                        <td><span class="badge bg-secondary">{{ environment.region|upper }}</span></td>
                    </tr>
                    <tr>
                        <th>Base URL</th>
                        <td><a href="{{ environment.baseUrl }}" target="_blank" rel="noopener">{{ environment.baseUrl }}</a></td>
                    </tr>
                    <tr>
                        <th>Backend Name</th>
                        <td><code>{{ environment.backendName }}</code></td>
                    </tr>
                    <tr>
                        <th>Admin User</th>
                        <td>{{ environment.adminUsername|default('Not configured') }}</td>
                    </tr>
                    <tr>
                        <th>Created</th>
                        <td>{{ environment.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    {% if environment.updatedAt %}
                    <tr>
                        <th>Updated</th>
                        <td>{{ environment.updatedAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    {% endif %}
                </table>
            </div>
        </div>

        {% set envVars = environment.envVariablesWithMetadata %}
        {% if envVars|length > 0 %}
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Environment-Specific Variables ({{ envVars|length }})</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                                <th>Used in Tests</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for name, data in envVars %}
                            <tr>
                                <td><code class="text-primary">{{ name }}</code></td>
                                <td class="text-muted small" style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                    {# SECURITY: Mask sensitive values (passwords, secrets, keys, tokens) #}
                                    {% if is_sensitive_name(name) %}
                                        <span class="text-secondary" title="Sensitive value hidden">{{ data.value|mask_sensitive }}</span>
                                    {% else %}
                                        {{ data.value }}
                                    {% endif %}
                                </td>
                                <td class="small">{{ data.usedInTests|default('â€”') }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body d-grid gap-2">
                <a href="{{ path('admin_test_run_new') }}?env={{ environment.id }}" class="btn btn-success">
                    <i class="bi bi-play-fill"></i> Start Test Run
                </a>
                <a href="{{ path('admin_test_environment_edit', {id: environment.id}) }}" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <form action="{{ path('admin_test_environment_toggle_active', {id: environment.id}) }}" method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ environment.id) }}">
                    <button type="submit" class="btn btn-{{ environment.isActive ? 'secondary' : 'primary' }} w-100">
                        <i class="bi bi-{{ environment.isActive ? 'pause' : 'play' }}"></i>
                        {{ environment.isActive ? 'Deactivate' : 'Activate' }}
                    </button>
                </form>
                <a href="{{ path('admin_test_environment_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
