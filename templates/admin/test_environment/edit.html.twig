{% extends 'admin/base.html.twig' %}

{% block title %}Edit Environment: {{ environment.name }}{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-amber-100 flex items-center justify-center">
                <i class="bi bi-globe text-xl text-amber-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Edit Environment: {{ environment.name }}</h1>
                <p class="text-sm text-slate-500 mt-0.5">Update environment configuration</p>
            </div>
        </div>
        <a href="{{ path('admin_test_environment_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div data-vue-island="test-environment-form"
     data-environment-id="{{ environment.id }}"
     data-api-url="/api/test-environments"
     data-cancel-url="{{ path('admin_test_environment_index') }}">
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ vite_entry_link_tags('test-environment-form-app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('test-environment-form-app') }}
{% endblock %}
