{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Create Cron Job{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-amber-100 flex items-center justify-center">
                <i class="bi bi-clock text-xl text-amber-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Create New Cron Job</h1>
                <p class="text-sm text-slate-500 mt-0.5">Add a scheduled task to run automatically</p>
            </div>
        </div>
        <a href="{{ path('admin_cron_job_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Job Configuration</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.name) }}</div>
                    <div>{{ form_row(form.cronExpression) }}</div>
                </div>

                {{ form_row(form.command) }}
                {{ form_row(form.description) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Status</h3>

                <div class="form-check mb-3">
                    {{ form_widget(form.isActive) }}
                    {{ form_label(form.isActive) }}
                    {{ form_help(form.isActive) }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Cron Job
                </button>
                <a href="{{ path('admin_cron_job_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="mt-4">
    <div class="alert alert-info">
        <strong>Cron Expression Examples:</strong>
        <ul class="mb-0 mt-2">
            <li><code>* * * * *</code> - Every minute</li>
            <li><code>0 * * * *</code> - Every hour (on the hour)</li>
            <li><code>0 0 * * *</code> - Daily at midnight</li>
            <li><code>0 0 * * 0</code> - Weekly on Sunday at midnight</li>
            <li><code>0 0 1 * *</code> - Monthly on the 1st at midnight</li>
        </ul>
    </div>
</div>
{% endblock %}
