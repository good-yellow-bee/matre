{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Edit Cron Job{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>Edit Cron Job: {{ cronJob.name }}</h1>
    <p class="subtitle">Modify scheduled task configuration</p>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Job Configuration</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.name) }}</div>
                    <div>{{ form_row(form.cronExpression) }}</div>
                </div>

                {{ form_row(form.command) }}
                {{ form_row(form.description) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Status</h3>

                <div class="form-check mb-3">
                    {{ form_widget(form.isActive) }}
                    {{ form_label(form.isActive) }}
                    {{ form_help(form.isActive) }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a href="{{ path('admin_cron_job_show', {id: cronJob.id}) }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

{% if cronJob.lastStatus %}
<div class="mt-3">
    <div class="alert alert-{{ cronJob.lastStatus == 'success' ? 'success' : (cronJob.lastStatus == 'running' ? 'warning' : 'danger') }}">
        <strong>Last Execution:</strong>
        {{ cronJob.lastRunAt|date('Y-m-d H:i:s') }} - Status: {{ cronJob.lastStatus }}
    </div>
</div>
{% endif %}
{% endblock %}
