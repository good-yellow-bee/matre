{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Add Test Suite{% endblock %}

{% block body %}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <i class="bi bi-collection text-xl text-blue-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Add Test Suite</h1>
                <p class="text-sm text-slate-500 mt-0.5">Create a reusable test collection</p>
            </div>
        </div>
        <a href="{{ path('admin_test_suite_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Suite Configuration</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.name) }}</div>
                    <div>{{ form_row(form.type) }}</div>
                </div>

                {# Hidden field for form submission #}
                <div style="display: none;">
                    {{ form_widget(form.testPattern) }}
                </div>

                <div class="mb-3">
                    <label class="form-label">Test/Group</label>
                    <div data-vue-island="test-pattern-selector"
                         data-type-field-id="test_suite_type"
                         data-pattern-field-id="test_suite_testPattern"
                         data-api-url="{{ path('api_test_discovery') }}"
                         data-csrf-token="{{ csrf_token('test_discovery') }}"
                         data-initial-value="">
                    </div>
                </div>

                {{ form_row(form.description) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Schedule</h3>

                {{ form_row(form.cronExpression) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Status</h3>

                <div class="form-check mb-3">
                    {{ form_widget(form.isActive) }}
                    {{ form_label(form.isActive) }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Suite
                </button>
                <a href="{{ path('admin_test_suite_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="mt-4">
    <div class="alert alert-info">
        <strong>Test Pattern Examples:</strong>
        <ul class="mb-0 mt-2">
            <li><strong>MFTF:</strong> <code>MOEC1625Test</code> (single test) or <code>checkout</code> (group)</li>
            <li><strong>Playwright:</strong> <code>@checkout</code> (tag) or <code>CheckoutTest</code> (file/test name)</li>
        </ul>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ vite_entry_link_tags('test-pattern-selector-app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('test-pattern-selector-app') }}
{% endblock %}
