{% extends 'admin/base.html.twig' %}

{% block title %}Start Test Run{% endblock %}

{% block body %}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-green-100 flex items-center justify-center">
                <i class="bi bi-play-circle text-xl text-green-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Start Test Run</h1>
                <p class="text-sm text-slate-500 mt-0.5">Select a test suite to execute against an environment</p>
            </div>
        </div>
        <a href="{{ path('admin_test_run_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div data-vue-island="test-run-form"
             data-suites-url="{{ path('api_test_suite_list') }}"
             data-form-action="{{ path('admin_test_run_new') }}"
             data-cancel-url="{{ path('admin_test_run_index') }}"
             data-csrf-token="{{ csrf_token('test_run') }}">
            <div class="text-center py-4">
                <span class="spinner-border spinner-border-sm text-primary"></span>
                <span class="ms-2 text-muted">Loading form...</span>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="alert alert-info">
        <strong>Note:</strong> Tests will be executed asynchronously. You can monitor progress on the run details page.
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('test-run-form-app') }}
{% endblock %}
