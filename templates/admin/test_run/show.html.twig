    <!-- DOMPurify for safe HTML sanitization -->
    <script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.6/dist/purify.min.js"></script>
    <script>
        // Convert ANSI escape codes to HTML with styled spans
        function ansiToHtml(text) {
            if (!text) return text;

            // Escape HTML first
            const escaped = text
                .replace(/&/g, '&amp;')
                .replace(/</g, '&lt;')
                .replace(/>/g, '&gt;');

            // ANSI color codes to CSS classes
            const colorMap = {
                '30': 'ansi-black', '31': 'ansi-red', '32': 'ansi-green', '33': 'ansi-yellow',
                '34': 'ansi-blue', '35': 'ansi-magenta', '36': 'ansi-cyan', '37': 'ansi-white',
                '90': 'ansi-bright-black', '91': 'ansi-bright-red', '92': 'ansi-bright-green',
                '93': 'ansi-bright-yellow', '94': 'ansi-bright-blue', '95': 'ansi-bright-magenta',
                '96': 'ansi-bright-cyan', '97': 'ansi-bright-white'
            };

            let result = escaped;
            let openTags = [];

            // Match ANSI escape sequences: ESC[...m (both \x1b and \033 formats)
            result = result.replace(/\x1b\[([0-9;]*)m|\[([0-9;]*)m/g, (match, p1, p2) => {
                const codes = (p1 || p2 || '0').split(';');
                let html = '';

                for (const code of codes) {
                    if (code === '0' || code === '39' || code === '22') {
                        // Reset - close all open tags
                        while (openTags.length) {
                            html += '</span>';
                            openTags.pop();
                        }
                    } else if (code === '1') {
                        // Bold
                        html += '<span class="ansi-bold">';
                        openTags.push('bold');
                    } else if (colorMap[code]) {
                        // Color
                        html += '<span class="' + colorMap[code] + '">';
                        openTags.push('color');
                    }
                }
                return html;
            });

            // Close any remaining open tags
            while (openTags.length) {
                result += '</span>';
                openTags.pop();
            }

            return result;
        }

        // Safely set HTML content using DOMPurify
        function setAnsiHtml(element, text) {
            const html = ansiToHtml(text);
            // DOMPurify sanitizes HTML - only allow span tags with class attribute
            const clean = DOMPurify.sanitize(html, {
                ALLOWED_TAGS: ['span'],
                ALLOWED_ATTR: ['class']
            });
            element.innerHTML = clean;
        }

        // Apply ANSI conversion to output log on page load
        document.addEventListener('DOMContentLoaded', () => {
            const outputEl = document.getElementById('output-log');
            if (outputEl && outputEl.textContent) {
                setAnsiHtml(outputEl, outputEl.textContent);
            }
        });
    </script>

    <style>
        /* ANSI color styles for terminal output */
        .ansi-bold { font-weight: bold; }
        .ansi-black { color: #555; }
        .ansi-red { color: #f55; }
        .ansi-green { color: #5f5; }
        .ansi-yellow { color: #ff5; }
        .ansi-blue { color: #55f; }
        .ansi-magenta { color: #f5f; }
        .ansi-cyan { color: #5ff; }
        .ansi-white { color: #fff; }
        .ansi-bright-black { color: #888; }
        .ansi-bright-red { color: #f88; }
        .ansi-bright-green { color: #8f8; }
        .ansi-bright-yellow { color: #ff8; }
        .ansi-bright-blue { color: #88f; }
        .ansi-bright-magenta { color: #f8f; }
        .ansi-bright-cyan { color: #8ff; }
        .ansi-bright-white { color: #fff; }
    </style>

    {% if run.status in ['pending', 'preparing', 'cloning', 'running', 'reporting'] %}
    <script>
        const outputEl = document.getElementById('output-log');
        const liveBadge = document.getElementById('live-badge');
        const apiUrl = '{{ path('admin_test_run_live_output', {id: run.id}) }}';
        let lastStatus = '{{ run.status }}';

        const resultsTbody = document.getElementById('results-tbody');
        const resultsCard = document.getElementById('results-card');
        const resultsCount = document.getElementById('results-count');
        const runId = {{ run.id }};
        let renderedResultIds = new Set();
        
        // Initialize with existing results
        document.querySelectorAll('[data-result-id]').forEach(el => {
            const id = el.dataset.resultId;
            if (id && !id.includes('-error')) renderedResultIds.add(parseInt(id));
        });

        function getStatusBadgeClass(status) {
            const colors = { passed: 'success', failed: 'danger', broken: 'warning', skipped: 'secondary' };
            return colors[status] || 'secondary';
        }

        function renderResultRow(result) {
            const tr = document.createElement('tr');
            tr.dataset.resultId = result.id;

            // Test name cell (safe: textContent)
            const nameTd = document.createElement('td');
            nameTd.textContent = result.testName;
            tr.appendChild(nameTd);

            // Status badge cell (safe: textContent for status text)
            const statusTd = document.createElement('td');
            const badge = document.createElement('span');
            badge.className = 'badge bg-' + getStatusBadgeClass(result.status);
            badge.textContent = result.status.toUpperCase();
            statusTd.appendChild(badge);
            tr.appendChild(statusTd);

            // Duration cell (safe: textContent)
            const durationTd = document.createElement('td');
            durationTd.textContent = result.durationFormatted || '-';
            tr.appendChild(durationTd);

            // Actions cell (safe: DOM construction)
            const actionsTd = document.createElement('td');
            const btnGroup = document.createElement('div');
            btnGroup.className = 'btn-group btn-group-sm';

            // Steps button
            const stepsBtn = document.createElement('button');
            stepsBtn.type = 'button';
            stepsBtn.className = 'btn btn-outline-secondary btn-steps';
            stepsBtn.dataset.resultId = result.id;
            stepsBtn.dataset.testName = result.testName;
            stepsBtn.dataset.apiUrl = '/admin/test-runs/' + runId + '/results/' + result.id + '/steps';
            stepsBtn.title = 'View execution steps';
            const stepsIcon = document.createElement('i');
            stepsIcon.className = 'bi bi-list-nested';
            stepsBtn.appendChild(stepsIcon);
            stepsBtn.appendChild(document.createTextNode(' Steps'));
            btnGroup.appendChild(stepsBtn);

            // Output button (if available)
            if (result.hasOutputFile) {
                const outputBtn = document.createElement('button');
                outputBtn.type = 'button';
                outputBtn.className = 'btn btn-outline-secondary btn-output';
                outputBtn.dataset.resultId = result.id;
                outputBtn.dataset.testName = result.testName;
                outputBtn.dataset.outputUrl = '/admin/test-runs/' + runId + '/results/' + result.id + '/output';
                outputBtn.title = 'View Output';
                const outputIcon = document.createElement('i');
                outputIcon.className = 'bi bi-terminal';
                outputBtn.appendChild(outputIcon);
                outputBtn.appendChild(document.createTextNode(' Output'));
                btnGroup.appendChild(outputBtn);
            }

            actionsTd.appendChild(btnGroup);
            tr.appendChild(actionsTd);

            // Add error row if present (safe: textContent for error message)
            if (result.errorMessage) {
                const errorTr = document.createElement('tr');
                errorTr.dataset.resultId = result.id + '-error';
                const errorTd = document.createElement('td');
                errorTd.colSpan = 4;
                errorTd.className = 'bg-light';
                const pre = document.createElement('pre');
                pre.className = 'text-danger mb-0 small';
                const errorText = result.errorMessage.length > 500
                    ? result.errorMessage.substring(0, 500) + '...'
                    : result.errorMessage;
                pre.textContent = errorText;
                errorTd.appendChild(pre);
                errorTr.appendChild(errorTd);
                resultsTbody.appendChild(tr);
                resultsTbody.appendChild(errorTr);
            } else {
                resultsTbody.appendChild(tr);
            }

            // Attach event handlers
            tr.querySelectorAll('.btn-steps').forEach(btn => attachStepsHandler(btn));
            tr.querySelectorAll('.btn-output').forEach(btn => attachOutputHandler(btn));
        }

        async function fetchLiveOutput() {
            try {
                const resp = await fetch(apiUrl);
                const data = await resp.json();

                if (data.output) {
                    setAnsiHtml(outputEl, data.output);
                    outputEl.scrollTop = outputEl.scrollHeight;
                }

                // Update progress display for sequential group runs
                const progressDisplay = document.getElementById('progress-display');
                const currentTestDisplay = document.getElementById('current-test-display');
                if (progressDisplay && data.progress) {
                    progressDisplay.textContent = data.progress;
                }
                if (currentTestDisplay && data.currentTest) {
                    currentTestDisplay.textContent = data.currentTest;
                } else if (currentTestDisplay && !data.currentTest) {
                    currentTestDisplay.textContent = 'None';
                }

                // Update output log header with current test name
                const outputTestName = document.getElementById('output-test-name');
                if (outputTestName) {
                    outputTestName.textContent = data.currentTest ? `(${data.currentTest})` : '';
                }

                // Render new results in real-time
                if (data.results && data.results.length > 0) {
                    resultsCard.style.display = '';
                    resultsCount.textContent = data.results.length;
                    
                    for (const result of data.results) {
                        if (!renderedResultIds.has(result.id)) {
                            renderResultRow(result);
                            renderedResultIds.add(result.id);
                        }
                    }
                }

                // Update status badge
                const statusBadge = document.getElementById('run-status-badge');
                if (statusBadge && data.status) {
                    const statusColors = {
                        'pending': 'secondary',
                        'preparing': 'info',
                        'cloning': 'info',
                        'running': 'warning',
                        'reporting': 'info',
                        'completed': 'success',
                        'failed': 'danger',
                        'cancelled': 'secondary'
                    };
                    statusBadge.textContent = data.status.toUpperCase();
                    statusBadge.className = 'badge bg-' + (statusColors[data.status] || 'secondary') + ' fs-6';
                }

                // Update Watch Live button visibility
                const watchLiveBtn = document.getElementById('watch-live-btn');
                if (watchLiveBtn) {
                    const isWatchable = ['preparing', 'cloning', 'running'].includes(data.status);
                    watchLiveBtn.style.display = isWatchable ? '' : 'none';
                }

                // Update live badge visibility
                if (liveBadge) {
                    const isRunning = ['preparing', 'cloning', 'running'].includes(data.status);
                    liveBadge.style.display = isRunning ? '' : 'none';
                }

                // Reload page when status changes to terminal state
                if (data.status !== lastStatus && ['completed', 'failed', 'cancelled'].includes(data.status)) {
                    location.reload();
                }
                lastStatus = data.status;
            } catch (e) {
                console.error('Failed to fetch live output:', e);
            }
        }

        // Poll every 2 seconds
        setInterval(fetchLiveOutput, 2000);
        fetchLiveOutput(); // Initial fetch
    </script>
