    <script>
        // Output modal handling - global function for dynamic buttons
        function attachOutputHandler(btn) {
            btn.addEventListener('click', async function() {
                const apiUrl = this.dataset.outputUrl;
                const testName = this.dataset.testName;
                const outputContent = document.getElementById('output-content');
                const outputTestName = document.getElementById('output-test-name');
                const outputStatusBadge = document.getElementById('output-status-badge');
                const outputModal = document.getElementById('outputModal');

                // Show modal
                const modal = new bootstrap.Modal(outputModal);
                modal.show();

                // Set test name
                outputTestName.textContent = testName;
                outputContent.textContent = 'Loading...';
                outputStatusBadge.textContent = '-';
                outputStatusBadge.className = 'badge ms-2 bg-secondary';

                try {
                    const resp = await fetch(apiUrl);
                    const data = await resp.json();

                    // Update status badge
                    const statusColors = {
                        'passed': 'bg-success',
                        'failed': 'bg-danger',
                        'broken': 'bg-warning',
                        'skipped': 'bg-secondary'
                    };
                    outputStatusBadge.textContent = data.status ? data.status.toUpperCase() : '-';
                    outputStatusBadge.className = 'badge ms-2 ' + (statusColors[data.status] || 'bg-secondary');

                    // Render output with ANSI colors
                    setAnsiHtml(outputContent, data.output || 'No output available');
                } catch (e) {
                    outputContent.textContent = 'Error loading output: ' + e.message;
                }
            });
        }

        // Attach to existing buttons
        document.querySelectorAll('.btn-output').forEach(btn => attachOutputHandler(btn));
    </script>
