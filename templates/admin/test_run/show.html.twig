    {{ vite_entry_script_tags('test-step-tree-app') }}

    <script>
        // Steps modal handling - global function for dynamic buttons
        const stepsModal = document.getElementById('stepsModal');
        const stepsContainer = document.getElementById('steps-container');
        const modalTitleText = document.querySelector('#stepsModalLabel');
        let currentVueApp = null;

        function attachStepsHandler(btn) {
            btn.addEventListener('click', () => {
                const apiUrl = btn.dataset.apiUrl;
                const testName = btn.dataset.testName;

                // Update modal title text
                const textNode = modalTitleText.lastChild;
                if (textNode && textNode.nodeType === Node.TEXT_NODE) {
                    textNode.textContent = testName;
                } else {
                    modalTitleText.appendChild(document.createTextNode(testName));
                }

                // Unmount previous Vue app if exists
                if (currentVueApp) {
                    currentVueApp.unmount();
                    currentVueApp = null;
                }

                // Clear container and set API URL
                stepsContainer.textContent = '';
                stepsContainer.dataset.apiUrl = apiUrl;

                // Mount new Vue app
                if (window.mountTestStepTree) {
                    currentVueApp = window.mountTestStepTree(stepsContainer, apiUrl);
                }

                // Show modal
                const modal = new bootstrap.Modal(stepsModal);
                modal.show();
            });
        }

        // Attach to existing buttons
        document.querySelectorAll('.btn-steps').forEach(btn => attachStepsHandler(btn));

        // Cleanup on modal close
        stepsModal.addEventListener('hidden.bs.modal', () => {
            if (currentVueApp) {
                currentVueApp.unmount();
                currentVueApp = null;
            }
            stepsContainer.textContent = '';
        });

        // Listen for test name updates (backfilled from Allure)
        window.addEventListener('test-name-updated', (e) => {
            const { testName, apiUrl } = e.detail;
            if (!testName || testName === 'Unknown') return;

            // Update modal title
            const textNode = modalTitleText.lastChild;
            if (textNode && textNode.nodeType === Node.TEXT_NODE) {
                textNode.textContent = testName;
            }

            // Update table row and button data
            const btn = document.querySelector(`.btn-steps[data-api-url="${apiUrl}"]`);
            if (btn) {
                btn.dataset.testName = testName;
                const row = btn.closest('tr');
                if (row) {
                    const nameCell = row.querySelector('td:first-child');
                    if (nameCell) {
                        // Preserve the testId small tag if exists
                        const small = nameCell.querySelector('small');
                        const historyLink = nameCell.querySelector('a');
                        nameCell.textContent = testName;
                        if (small) {
                            nameCell.appendChild(document.createElement('br'));
                            nameCell.appendChild(small);
                        }
                        if (historyLink) {
                            nameCell.appendChild(historyLink);
                        }
                    }
                }
            }
        });
    </script>

