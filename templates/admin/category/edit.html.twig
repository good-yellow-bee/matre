{% extends 'admin/base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>Edit Category</h1>
    <p class="subtitle">Modify category: <strong>{{ category.name }}</strong></p>
</div>

{# Vue Category Form #}
<div
    data-vue-island="category-form"
    data-category-id="{{ category.id }}"
    data-api-url="{{ path('api_categories_index') }}"
    data-cancel-url="{{ path('admin_category_index') }}"
></div>

<div class="mt-3">
    <small class="text-muted">
        Created: {{ category.createdAt|date('Y-m-d H:i') }}
        {% if category.updatedAt %}
            | Last Updated: {{ category.updatedAt|date('Y-m-d H:i') }}
        {% endif %}
        | Pages: {{ category.pageCount }}
    </small>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('category-form-app') }}
{% endblock %}
