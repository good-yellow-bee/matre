{% extends 'admin/base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-violet-100 flex items-center justify-center">
                <i class="bi bi-tag text-xl text-violet-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Edit Category</h1>
                <p class="text-sm text-slate-500 mt-0.5">
                    Modify category: <span class="font-medium text-slate-700">{{ category.name }}</span>
                </p>
            </div>
        </div>
        <a href="{{ path('admin_category_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

{# Vue Category Form #}
<div
    data-vue-island="category-form"
    data-category-id="{{ category.id }}"
    data-api-url="{{ path('api_categories_index') }}"
    data-cancel-url="{{ path('admin_category_index') }}"
></div>

<div class="mt-4 text-sm text-slate-500">
    Created: {{ category.createdAt|date('M j, Y H:i') }}
    {% if category.updatedAt %}
        | Last Updated: {{ category.updatedAt|date('M j, Y H:i') }}
    {% endif %}
    | Pages: {{ category.pageCount }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('category-form-app') }}
{% endblock %}
