{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>Edit Category</h1>
    <p class="subtitle">Modify category: <strong>{{ category.name }}</strong></p>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">Category Information</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.name) }}</div>
                    <div>{{ form_row(form.slug) }}</div>
                </div>

                {{ form_row(form.description) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Organization</h3>

                <div class="form-grid">
                    {% if form.parent is defined %}
                        <div>{{ form_row(form.parent) }}</div>
                    {% endif %}
                    {% if form.displayOrder is defined %}
                        <div>{{ form_row(form.displayOrder) }}</div>
                    {% endif %}
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Settings</h3>

                {% if form.isActive is defined %}
                    <div class="form-check mb-3">
                        {{ form_widget(form.isActive) }}
                        {{ form_label(form.isActive) }}
                        {{ form_help(form.isActive) }}
                    </div>
                {% endif %}

                {% if form.isFeatured is defined %}
                    <div class="form-check mb-3">
                        {{ form_widget(form.isFeatured) }}
                        {{ form_label(form.isFeatured) }}
                        {{ form_help(form.isFeatured) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Category
                </button>
                <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-info">
                    <i class="bi bi-eye"></i> View
                </a>
                <a href="{{ path('admin_category_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        Created: {{ category.createdAt|date('Y-m-d H:i') }}
        {% if category.updatedAt is defined %}
            | Last Updated: {{ category.updatedAt|date('Y-m-d H:i') }}
        {% endif %}
        {% if category.pageCount is defined %}
            | Pages: {{ category.pageCount }}
        {% endif %}
    </small>
</div>
{% endblock %}
