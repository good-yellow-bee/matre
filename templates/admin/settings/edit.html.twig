{% extends 'admin/base.html.twig' %}
{% form_theme form 'form/bootstrap_5_custom.html.twig' %}

{% block title %}Site Settings{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center gap-4">
        <div class="h-12 w-12 rounded-xl bg-slate-100 flex items-center justify-center">
            <i class="bi bi-gear text-xl text-slate-600"></i>
        </div>
        <div>
            <h1 class="text-xl font-semibold text-slate-900">Site Settings</h1>
            <p class="text-sm text-slate-500 mt-0.5">Configure global settings for your website</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-section">
                <h3 class="form-section-title">General Settings</h3>

                <div class="form-grid">
                    <div>{{ form_row(form.siteName) }}</div>
                    <div>{{ form_row(form.adminPanelTitle) }}</div>
                </div>

                <div class="form-grid">
                    <div>{{ form_row(form.defaultLocale) }}</div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">SEO & Meta</h3>

                {{ form_row(form.seoDescription) }}
                {{ form_row(form.seoKeywords) }}
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Mode</h3>

                <div class="form-check mb-3">
                    {{ form_widget(form.headlessMode) }}
                    {{ form_label(form.headlessMode) }}
                    {{ form_help(form.headlessMode) }}
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Security</h3>

                <div class="form-check mb-3">
                    {{ form_widget(form.enforce2fa) }}
                    {{ form_label(form.enforce2fa) }}
                    {{ form_help(form.enforce2fa) }}
                </div>

                <div class="p-3 bg-blue-50 border border-blue-200 rounded-lg text-sm text-blue-700">
                    <i class="bi bi-info-circle me-2"></i>
                    When enabled, users without 2FA configured will be redirected to set it up on their next login.
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save Settings
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="mt-4 text-sm text-slate-500">
    Settings last updated: {{ 'now'|date('M j, Y H:i') }}
    | Environment: {{ app.environment|upper }}
    | Debug: {{ app.debug ? 'ON' : 'OFF' }}
</div>
{% endblock %}
