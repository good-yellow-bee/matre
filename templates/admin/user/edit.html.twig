{% extends 'admin/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <i class="bi bi-person text-xl text-blue-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">Edit User</h1>
                <p class="text-sm text-slate-500 mt-0.5">
                    Modify user account: <span class="font-medium text-slate-700">{{ user.username }}</span>
                    <span class="text-slate-400">({{ user.email }})</span>
                </p>
            </div>
        </div>
        <a href="{{ path('admin_user_index') }}"
           class="inline-flex items-center gap-2 px-4 py-2 bg-slate-100 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-200 transition-colors no-underline">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

{# Vue User Form #}
<div
    data-vue-island="user-form"
    data-user-id="{{ user.id }}"
    data-api-url="{{ path('api_users_index') }}"
    data-cancel-url="{{ path('admin_user_index') }}"
></div>

<div class="mt-4 text-sm text-slate-500">
    Created: {{ user.createdAt|date('M j, Y H:i') }}
    {% if user.updatedAt %}
        | Last Updated: {{ user.updatedAt|date('M j, Y H:i') }}
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
    {{ vite_entry_link_tags('user-form-app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('user-form-app') }}
{% endblock %}
