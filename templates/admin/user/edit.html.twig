{% extends 'admin/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="dashboard-welcome mb-4">
    <h1>Edit User</h1>
    <p class="subtitle">Modify user account: <strong>{{ user.username }}</strong> ({{ user.email }})</p>
</div>

{# Vue User Form #}
<div
    data-vue-island="user-form"
    data-user-id="{{ user.id }}"
    data-api-url="{{ path('api_users_index') }}"
    data-cancel-url="{{ path('admin_user_index') }}"
></div>

<div class="mt-3">
    <small class="text-muted">
        Created: {{ user.createdAt|date('Y-m-d H:i') }}
        {% if user.updatedAt %}
            | Last Updated: {{ user.updatedAt|date('Y-m-d H:i') }}
        {% endif %}
    </small>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ vite_entry_script_tags('user-form-app') }}
{% endblock %}
