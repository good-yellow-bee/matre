{% extends 'admin/base.html.twig' %}
{% block title %}Users{% endblock %}
{% block body %}
<h1>Users <a href="{{ path('admin_user_new') }}" class="btn btn-primary btn-sm">New</a></h1>
<table class="table">
    <thead><tr><th>Username</th><th>Email</th><th>Roles</th><th>Active</th><th>Actions</th></tr></thead>
    <tbody>
    {% for user in users %}
        <tr><td>{{ user.username }}</td><td>{{ user.email }}</td><td>{{ user.roles|join(', ') }}</td>
            <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            <td><a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">Edit</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
