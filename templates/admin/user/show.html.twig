{% extends 'admin/base.html.twig' %}

{% block title %}User: {{ user.username }}{% endblock %}

{% block body %}
{# Page Header #}
<div class="bg-white rounded-xl border border-slate-200 p-6 shadow-sm mb-6">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
            <div class="h-12 w-12 rounded-xl bg-slate-100 flex items-center justify-center">
                <i class="bi bi-person text-xl text-slate-600"></i>
            </div>
            <div>
                <h1 class="text-xl font-semibold text-slate-900">{{ user.username }}</h1>
                <p class="text-sm text-slate-500 mt-0.5">{{ user.email }}</p>
            </div>
        </div>
        <div class="flex gap-2">
            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a href="{{ path('admin_user_index') }}" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </div>
</div>

<div class="row">
    {# User Details #}
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">User Details</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped mb-0">
                    <tbody>
                        <tr>
                            <th class="w-25">ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-primary me-1">{{ role }}</span>
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                {% if user.isActive %}
                                    <span class="badge bg-success">Active</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactive</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>{{ user.createdAt|date('M j, Y H:i') }}</td>
                        </tr>
                        <tr>
                            <th>Updated</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('M j, Y H:i') : 'Never' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Security & Actions #}
    <div class="col-md-4">
        {# 2FA Status #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-shield-lock me-2"></i>Two-Factor Authentication
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Status:</strong>
                    {% if user.isTotpEnabled %}
                        <span class="badge bg-success ms-2">
                            <i class="bi bi-check-circle me-1"></i> Enabled
                        </span>
                    {% else %}
                        <span class="badge bg-secondary ms-2">
                            <i class="bi bi-x-circle me-1"></i> Not configured
                        </span>
                    {% endif %}
                </div>

                {% if user.isTotpEnabled %}
                    <p class="text-muted small mb-3">
                        User has configured an authenticator app for 2FA verification.
                    </p>
                    <form method="post" action="{{ path('admin_user_reset_2fa', {'id': user.id}) }}" 
                          onsubmit="return confirm('Reset 2FA for this user? They will need to set up their authenticator app again.')">
                        <input type="hidden" name="_token" value="{{ csrf_token('reset2fa' ~ user.id) }}">
                        <button type="submit" class="btn btn-warning btn-sm w-100">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>
                            Reset 2FA
                        </button>
                    </form>
                {% else %}
                    <p class="text-muted small mb-0">
                        User has not set up two-factor authentication yet.
                    </p>
                {% endif %}
            </div>
        </div>

        {# Quick Actions #}
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                {% if user != app.user %}
                    <form method="post" action="{{ path('admin_user_toggle_active', {'id': user.id}) }}" class="mb-2">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                        <button type="submit" class="btn btn-{{ user.isActive ? 'warning' : 'success' }} btn-sm w-100">
                            <i class="bi bi-{{ user.isActive ? 'pause-circle' : 'play-circle' }} me-1"></i>
                            {{ user.isActive ? 'Deactivate' : 'Activate' }} User
                        </button>
                    </form>

                    <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm w-100">
                            <i class="bi bi-trash me-1"></i>
                            Delete User
                        </button>
                    </form>
                {% else %}
                    <p class="text-muted small mb-0">
                        <i class="bi bi-info-circle me-1"></i>
                        You cannot modify or delete your own account.
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
