{# Modern Minimalist Admin Base Template #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin{% endblock %} - ReSymf CMS</title>

    {# Bootstrap 5 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    {# Custom Admin Styles #}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body class="admin-layout">
    {# Top Navigation Bar #}
    <nav class="admin-navbar">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">
            <i class="bi bi-speedometer2"></i>
            ReSymf CMS Admin
        </a>

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') starts with 'admin_dashboard' ? 'active' : '' }}"
                   href="{{ path('admin_dashboard') }}">
                    Dashboard
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') starts with 'admin_page' or app.request.get('_route') starts with 'admin_category' ? 'active' : '' }}"
                   href="#">
                    Content <i class="bi bi-chevron-down" style="font-size: 10px;"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('admin_page_index') }}">
                        <i class="bi bi-file-text"></i> Pages
                    </a>
                    <a class="dropdown-item" href="{{ path('admin_category_index') }}">
                        <i class="bi bi-tags"></i> Categories
                    </a>
                </div>
            </li>

            {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') starts with 'admin_theme' ? 'active' : '' }}"
                   href="#">
                    Appearance <i class="bi bi-chevron-down" style="font-size: 10px;"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('admin_theme_index') }}">
                        <i class="bi bi-palette"></i> Themes
                    </a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') starts with 'admin_user' ? 'active' : '' }}"
                   href="#">
                    Users <i class="bi bi-chevron-down" style="font-size: 10px;"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('admin_user_index') }}">
                        <i class="bi bi-people"></i> All Users
                    </a>
                    <a class="dropdown-item" href="{{ path('admin_user_new') }}">
                        <i class="bi bi-person-plus"></i> Add New
                    </a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') starts with 'admin_settings' ? 'active' : '' }}"
                   href="{{ path('admin_settings_edit') }}">
                    Settings
                </a>
            </li>
            {% endif %}
        </ul>

        <div class="navbar-nav-right">
            <a class="nav-link" href="{{ path('cms_homepage') }}" target="_blank" title="View Site">
                <i class="bi bi-eye"></i>
            </a>

            <div class="user-menu">
                <a href="#" class="user-toggle">
                    <i class="bi bi-person-circle"></i>
                    {{ app.user.username }}
                    <i class="bi bi-chevron-down" style="font-size: 10px;"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('admin_settings_edit') }}">
                        <i class="bi bi-gear"></i> Settings
                    </a>
                    <hr style="margin: 4px 0;">
                    <a class="dropdown-item" href="{{ path('app_logout') }}">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    {# Main Content Area #}
    <main class="admin-main">
        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Page Content #}
        {% block body %}{% endblock %}
    </main>

    {# JavaScript #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {# TinyMCE Rich Text Editor #}
    {% block tinymce %}
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="{{ asset('tinymce-init.js') }}" type="module"></script>
    {% endblock %}

    {# Admin JavaScript Enhancements #}
    <script src="{{ asset('admin.js') }}" type="module"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
